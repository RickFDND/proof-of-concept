{% render 'partials/head.liquid' %}

{% render 'partials/header.liquid' %}

<main>
    <h1><strong>Projecten</strong> waar we trots op zijn!</h1>

    <ul class="projects-list">
        {% for case in cases offset:0 limit:8 %}
        <li class="project-section">
            <a href="project/{{ case.id }}">
                <div>
                    <img alt="{{ case.title.rendered }}" src="{{ case.yoast_head_json.og_image[0].url }}" width="360" height="360" class="project-img" loading="lazy">
                </div>
                <h2>{{ case.title.rendered }}</h2>
                <p>{{ case.content.rendered | strip_html | truncatewords: 32 }}</p>
                <span>lees verder
                    <svg width="18" height="18" viewBox="0 0 16 12" xmlns="http://www.w3.org/2000/svg" fill="none">
                        <line x1="1" y1="6" x2="13" y2="6" stroke="currentColor" stroke-width="1"/>
                        <polyline points="9,2 13,6 9,10" stroke="currentColor" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </span>
            </a>
        </li>
        {% endfor %}
    </ul>

    <section class="next-page-buttons">
        <span>1</span>
        <a href="cases-2" class="button-pink">2</a>
        <a href="cases-3" class="button-pink">3</a>
        <a href="cases-2" class="button-pink">
            <svg width="16" height="16" viewBox="0 0 15 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.8125 0.21875C6.9375 0.0625 7.1875 0.0625 7.34375 0.21875L13.875 6.75C14.0312 6.90625 14.0312 7.125 13.875 7.28125L7.34375 13.8125C7.1875 13.9688 6.9375 13.9688 6.8125 13.8125L6.1875 13.2188C6.03125 13.0625 6.03125 12.8125 6.1875 12.6875L11.0312 7.8125H0.375C0.15625 7.8125 0 7.65625 0 7.4375V6.5625C0 6.375 0.15625 6.1875 0.375 6.1875H11.0312L6.1875 1.34375C6.03125 1.21875 6.03125 0.96875 6.1875 0.8125L6.8125 0.21875Z" fill="white" stroke="white" stroke-width="0.8" stroke-linejoin="round"/>
            </svg>
        </a>
    </section>
</main>

