<main class="detail-main">
    <span class="detail-nav">
        <a href="/">Home</a> »
        <a href="/cases">Cases</a> » <span>{{ project.title.rendered }}</span>
    </span>

    <img alt="{{ project.title.rendered }}" src="{{ project.yoast_head_json.og_image[0].url }}" width="360" height="360" class="detail-img" loading="lazy">
    
    <section class="project-leaders">
        <h2>{{ project.title.rendered }}</h2>
        <ul>
            <li>Website</li>
            <li>Leestijd 2 minuten</li>
            <li>19 mei 2025</li>
        </ul>
 
        <ul>
            {% for lid in project.acf.case_team %}
            {% for user in users %}
                {% if user.id == lid %}
            <li>
                <img src="{{ user.avatar_urls.96 }}" alt="{{ user.name }}">
                <h3><strong>{{ user.acf.user_data.profile_title }}</strong></h3>
                <p>{{ user.acf.user_data.role }}</p>
            </li>
            {% endif %}
            {% endfor %}
            {% endfor %}
        </ul>  
    </section>

    <section class="project-content"> 
        {{ project.content.rendered }}
    </section>

    <section class="single-project-leader">
        <p>Meer weten over dit project? Neem contact op met de projectleider:</p>

        {% for user in users %}
            {% if user.id == 4 %}

            <div>
                <img src="{{ user.avatar_urls.96 }}" alt="{{ user.name }}">
                <p><strong>{{ user.name }}</strong>, <br>projectleider</p>
                <a href="mailto:vincent@labelvier.nl">vincent@labelvier.nl</a>
            </div>
            {% endif %}
        {% endfor %}  
    </section>

